{
  "type": "module",
  "workspaces": [
    "apps/client-js",
    "apps/client-js-demo",
    "libs/moqtail-ts"
  ],
  "scripts": {
    "build:client": "npm --prefix apps/client-js-demo run build",
    "build:moqtail": "npm --prefix libs/moqtail-ts run build",
    "test:client": "npm --prefix apps/client-js-demo run test -- run",
    "test:moqtail": "npm --prefix libs/moqtail-ts run test -- run",
    "format:client": "npm --prefix apps/client-js-demo run format",
    "format:moqtail": "npm --prefix libs/moqtail-ts run format",
    "lint:client": "npm --prefix apps/client-js-demo run lint",
    "lint:moqtail": "npm --prefix libs/moqtail-ts run lint",
    "type-check:moqtail": "npm --prefix libs/moqtail-ts run type-check",
    "type-check:client": "npm --prefix apps/client-js-demo run type-check",
    "build": "npm-run-all --continue-on-error build:moqtail build:client",
    "test": "npm-run-all --continue-on-error test:client test:moqtail",
    "format": "npm-run-all --continue-on-error format:client format:moqtail",
    "lint": "npm-run-all --continue-on-error lint:client lint:moqtail",
    "type-check": "npm-run-all --continue-on-error type-check:client type-check:moqtail",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.30.1",
    "eslint": "^9.30.1",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  }
}
